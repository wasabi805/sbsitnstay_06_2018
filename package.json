{
  "name": "sbsitnstay_06_2018",
  "version": "1.0.0",
  "description": "site used to collect contact data for potential clients for sbsitnstay",
  "main": "server.js",
  "scripts": {
    "client-install" : "npm install --prefix client", // <-- with the prefix flag, it's the same as cd client && npm install
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",            // <-- give the option to just run the client server
    "dev": "concurrently \"npm run server\" \"npm run client\"" //runs both servers localhost:5000 && localhost:3000
  },
  "author": "Tim Ocampo",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^3.5.1",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.2.2",
    "mongoose": "^5.1.4",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^10.3.0"
  },
  "devDependencies": {
    "nodemon": "^1.17.5"
  }
}
